<div class="d-flex justify-content-center">
  <div class="flex-colum col-8">
    <h2 class="d-flex justify-content-center mt-2"> Профиль </h2>
    <div>
      <%= form_with scope: :user, url: users_path, local: true do |form| %>
        
        <% if @user.errors.any? %>      
          <% @user.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"> <%= msg%></div>
          <% end %>
        <% end %>

        <div class="form-group">  
          <%= form.label("Электронная почта", class:"") %>
          <% if @user.errors[:email].any? %>
            <%= form.email_field :email, class:"rounded-lg form-control is-invalid" %>
          <% else %>
            <%= form.email_field :email, class:"rounded-lg form-control" %>
          <% end %>
        </div>

        <div class="form-group">  
          <%= form.label("Пароль", class:"") %>
          <% if @user.errors[:password].any? %>
            <%= form.password_field :password, class:" rounded-lg form-control is-invalid" %>
          <% else %>
            <%= form.password_field :password, class:" rounded-lg form-control" %>
          <% end %>
        </div>

        <div class="form-group">  
          <%= form.label("Подтверждение пароля", class:"") %>
          <% if @user.errors[:password_confirmation].any? %>
            <%= form.password_field :password_confirmation, class:" rounded-lg form-control is-invalid" %>
          <% else %>
            <%= form.password_field :password_confirmation, class:" rounded-lg form-control" %>
          <% end %>
        </div>

        <div class="form-group">  
          <%= form.label("Имя", class:"") %>
          <%= form.text_field :name, class:"rounded-lg form-control" %>
        </div>

        <div class="d-flex justify-content-end mt-2">
          <%= form.submit "Сохранить", class:"btn btn-success col-sm-4"%>
        </div>
      <% end %>
    </div>
  </div>
</div>